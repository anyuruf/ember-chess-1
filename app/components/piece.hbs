<div class="piece {{@piece.color}} {{if this.canBeTaken "can-be-taken"}} {{if (eq @selectedPiece @piece) "selected"}}">
  <button
    type="button"
    disabled={{and this.isNotMyTurn (not this.canBeTaken)}}
    draggable={{this.isMyTurn}}
    {{on "click" (if this.canBeTaken @move (fn @select @piece))}}
    {{on "dragstart" this.dragStart}}
    {{on "dragend" this.dragEnd}}
    {{on "drop" this.drop}}
    {{on "dragover" this.dragOver}}
  >
    {{#if (eq @piece.type "pawn")}}
      <Piece::Pawn @color={{@piece.color}} />
    {{else if (eq @piece.type "rook")}}
      <Piece::Rook @color={{@piece.color}} />
    {{else if (eq @piece.type "knight")}}
      <Piece::Knight @color={{@piece.color}} />
    {{else if (eq @piece.type "bishop")}}
      <Piece::Bishop @color={{@piece.color}} />
    {{else if (eq @piece.type "queen")}}
      <Piece::Queen @color={{@piece.color}} />
    {{else if (eq @piece.type "king")}}
      <Piece::King @color={{@piece.color}} />
    {{/if}}
  </button>
</div>