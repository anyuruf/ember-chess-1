<h2 class="sr-only">{{@color}}'s captured pieces</h2>
<section class="side {{@color}}">
  <ul>
    {{#each @capturedPieces as |piece|}}
      <li class="space piece {{piece.color}}">
        <Icon::Piece
          @type={{piece.type}}
          @color={{piece.color}}
        />
      </li>
    {{/each}}
  </ul>
</section>